<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" minHeight="0.0" minWidth="0.0" prefHeight="230.0" prefWidth="330.0"
            styleClass="roundedBordersDialog" stylesheets="@css/main.css" xmlns="http://javafx.com/javafx/17.0.12"
            fx:controller="org.dpsoftware.gui.controllers.SmoothingDialogController">

    <GridPane alignment="CENTER" prefHeight="230.0" prefWidth="330.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="204.66666666666666" minWidth="10.0" prefWidth="141.4"/>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="150.6" minWidth="10.0" prefWidth="148.6"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="10.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="1.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        </rowConstraints>
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="10.0"/>
        </padding>
        <Label prefHeight="18.0" prefWidth="155.0" text="%fxml.dialog.smoothing.fg" wrapText="true"
               GridPane.rowIndex="4"/>
        <ComboBox fx:id="frameGen" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="4">
            <opaqueInsets>
                <Insets/>
            </opaqueInsets>
        </ComboBox>
        <HBox prefHeight="100.0" prefWidth="200.0" GridPane.rowIndex="6" GridPane.valignment="BOTTOM">
            <Button minWidth="60.0" mnemonicParsing="false" onMouseClicked="#saveAndClose" text="%fxml.dialog.ok">
                <HBox.margin>
                    <Insets top="10.0"/>
                </HBox.margin>
            </Button>
        </HBox>
        <HBox alignment="TOP_RIGHT" prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="6">
            <Button contentDisplay="TOP" minWidth="60.0" mnemonicParsing="false" onMouseClicked="#close"
                    prefHeight="25.0" text="%fxml.dialog.cancel">
                <HBox.margin>
                    <Insets top="10.0"/>
                </HBox.margin>
            </Button>
        </HBox>
        <Label text="%fxml.dialog.smoothing.ema" wrapText="true" GridPane.rowIndex="2"/>
        <ComboBox fx:id="smoothingLvl" prefHeight="25.0" prefWidth="150.0" GridPane.columnIndex="1"
                  GridPane.rowIndex="2"/>
        <Label text="%fxml.dialog.smoothing.target.framerate" wrapText="true" GridPane.rowIndex="5"/>
        <ComboBox fx:id="targetFramerate" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
        <TextField fx:id="captureFramerate" disable="true" editable="false" GridPane.columnIndex="1"
                   GridPane.rowIndex="3"/>
        <Label text="%fxml.dialog.smoothing.capture.framerate" wrapText="true" GridPane.rowIndex="3"/>
        <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="18.0" prefWidth="334.0"
               style="-fx-font-weight: bold;" text="%fxml.profile.title" textAlignment="CENTER" wrapText="true"
               GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.valignment="TOP"/>
        <Separator prefHeight="0.1" prefWidth="200.0" styleClass="separator" GridPane.columnSpan="2"
                   GridPane.rowIndex="1"/>
    </GridPane>
</AnchorPane>
